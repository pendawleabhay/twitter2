<html>
<head>
    <meta charset="utf-8">
    <link rel='stylesheet' href='/stylesheets/styleSignUp.css' />
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
    <script src="//code.jquery.com/jquery-1.10.2.js"></script>
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>

</head>
<body ng-app = "signUpApp" ng-controller = "signUpController">
    <div class="container-fluid">
        <div class="image" style="background-image: url(../images/twitter_image.png);" >
            <div style="margin-top: 40px;" class="pull-right">
                <small id = "smallTag">Have an account? Log in</small>
            </div>
        </div>
    </div>
    <div id = "divSignUp" class = "col-sm-6">
        <h1 class=" header">Join Twitter Today.</h1>
        <form name = "SignUp">
            <div class="form-group col-sm-7" ng-class="{ 'has-error' : SignUp.fname.$invalid && !SignUp.fname.$pristine }">
                <input type="text" class="form-control" id="fname" placeholder="First Name" ng-model = "fname" name = "fname" required>
            </div>
            <div class="form-group col-sm-7" ng-class="{ 'has-error' : SignUp.lname.$invalid && !SignUp.lname.$pristine }">
                <input type="text" class="form-control" id="lname" placeholder="Last Name" ng-model = "lname"  name = "lname" required />
            </div>

            <div class="form-group col-sm-7 " ng-class="{ 'has-error' : SignUp.email.$invalid && !SignUp.email.$pristine }">
                <input type="email" class="form-control" id="email" placeholder="Email" ng-model = "email"  name = "email" required />
            </div>
            <div class="form-group col-sm-7 " ng-class="{ 'has-error' : SignUp.password.$invalid && !SignUp.password.$pristine }">
                <input type="password" class="form-control" id="password" placeholder="Password" ng-model = "password" name = "password" required>
            </div>


            <div class="form-group col-sm-7 ">
                <input type="radio" class="form-control" id="genderMale" ng-model = "gender" value="male"  required />
                <p id="male">Male</p>
                <input type="radio" class="form-control" id="genderFemale" ng-model = "gender" value="female" />
                <p id = "female">Female</p>
            </div>


            <div class="form-group col-sm-7 " ng-class="{ 'has-error' : SignUp.date.$invalid && !SignUp.date.$pristine }">
                <input  type="text" id="date" class="form-control" ng-model = "date" name = "date" placeholder="Birth Date(YYYY-MM-DD)"
                         required />
            </div>

            <div class="form-group col-sm-7 " ng-class="{ 'has-error' : SignUp.handle.$invalid && !SignUp.handle.$pristine }">
                <input type="text" class="form-control" id="handle" placeholder="Twitter Handler" ng-model = "handle" name = "handle" required>
            </div>

            <div class="form-group col-sm-7 " ng-class="{ 'has-error' : SignUp.location.$invalid && !SignUp.location.$pristine }">
                <input type="text" class="form-control" id="location" placeholder="Location" ng-model = "location" name = "location" required>
            </div>
            <div class="form-group col-sm-7" >
                <button type="submit" class="buttonLogin btn" ng-click = "clickSignUp()">Sign Up</button>
            </div>

        </form>
    </div>
    <div  class="form-group" id = "credentials" ng-hide = "credentials">Twitter Handle Already Exists
    </div>
    <div  class="form-group" id = "emailCredentials" ng-hide = "emailCredentials">Email Already Exists
    </div>
    <script src = "./javascripts/SignUpController.js"></script>
</body>
</html>